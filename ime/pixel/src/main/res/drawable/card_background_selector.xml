<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle"
                    android:dither="true">
                    <corners android:radius="2dp"/>
                    <solid android:color="#77000000" />
                </shape>
            </item>
            <item android:bottom="2dp">
                <shape android:shape="rectangle"
                    android:dither="true">
                    <corners android:radius="2dp" />
                    <!-- Darker background for pressed state -->
                    <solid android:color="@color/app_card_background_pressed" />
                    <stroke android:width="1px" android:color="#000"/>
                    <padding android:bottom="8dp"
                        android:left="8dp"
                        android:right="8dp"
                        android:top="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Focused state (for accessibility) -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle"
                    android:dither="true">
                    <corners android:radius="2dp"/>
                    <solid android:color="#77000000" />
                </shape>
            </item>
            <item android:bottom="2dp">
                <shape android:shape="rectangle"
                    android:dither="true">
                    <corners android:radius="2dp" />
                    <!-- Slightly different color for focus state -->
                    <solid android:color="@color/app_card_background_focused" />
                    <stroke android:width="2px" android:color="@color/focus_border_color"/>
                    <padding android:bottom="8dp"
                        android:left="8dp"
                        android:right="8dp"
                        android:top="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default/Normal state -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle"
                    android:dither="true">
                    <corners android:radius="2dp"/>
                    <solid android:color="#77000000" />
                </shape>
            </item>
            <item android:bottom="2dp">
                <shape android:shape="rectangle"
                    android:dither="true">
                    <corners android:radius="2dp" />
                    <solid android:color="@color/app_card_background" />
                    <stroke android:width="1px" android:color="#000"/>
                    <padding android:bottom="8dp"
                        android:left="8dp"
                        android:right="8dp"
                        android:top="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
